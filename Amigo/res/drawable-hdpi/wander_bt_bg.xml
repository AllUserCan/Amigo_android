<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="true">
		<shape>
			<gradient android:startColor="#696969"
			    android:centerColor="#000000" 
			    android:endColor="#696969" 
				android:angle="270"
				android:type="sweep" />
			<stroke android:width="1dip" android:color="#3C3C3C" />
			<corners android:radius="120dip" />
		</shape>
	</item>
 
	<item>
		<shape>
			<gradient android:startColor="#0426AE" 
			    android:centerColor="#3B5DE6" 
			    android:endColor="#0426AE"
				android:angle="90"
				android:type="sweep" />
			<stroke android:width="1dip" android:color="#29CAFC" />
			<corners android:radius="120dip" />
		</shape>
	</item>
    
	
</selector>
